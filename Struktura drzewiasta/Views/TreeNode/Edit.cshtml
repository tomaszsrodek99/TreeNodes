@model Struktura_drzewiasta.Dtos.TreeNodeDto
@{
    ViewData["Title"] = "Edytowanie";
}
<form asp-action="EditTreeNode" asp-controller="TreeNode" method="post" class="my-form">
    <h2>Edytowanie węzła</h2>

    @Html.AntiForgeryToken()

    <div class="form-group">
        <input asp-for="Id" type="hidden"/>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ParentId"></label>
        <select asp-for="ParentId" class="form-control" asp-items="ViewBag.ParentsList"></select>
        <span asp-validation-for="ParentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="btn-group">
            <button style="margin-right: 15px" type="button" class="btn btn-secondary" onclick="goBack()">Wstecz</button>
            <button type="submit" class="btn btn-primary">Dodaj węzeł</button>
        </div>
    </div>
</form>

